@model ExiledToolkit.Models.StashViewModel
@{
    ViewBag.Title = "Index";
}

@if (Model == null)
{
    <h3>No Items</h3>
}
else
{
    <div id='tabContainer'>
        <ul>
            @foreach(var tab in Model.Tabs)
            {
                <li><a href='#@tab.Key.Replace(' ', '_')'>@tab.Key</a></li>
            }
        </ul>
    @foreach(var tab in Model.Tabs)
    {
        <div id='@tab.Key.Replace(' ', '_')'>
            <table>
                @foreach (var item in tab.Value.Items)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Type</td>
                        <td>@item.Description</td>
                    </tr>
                }
            </table>
        </div>
    }
    </div>
    <script type="text/jscript">
        $("#tabContainer").tabs();
    </script>
}