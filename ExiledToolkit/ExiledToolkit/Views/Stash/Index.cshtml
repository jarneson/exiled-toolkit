@model List<ExiledToolkit.Models.ToolkitObjects.Item>
@{
    ViewBag.Title = "Index";
}


<h2>Index</h2>
<div>
@if (Model.Count == 0)
{
    <text>No Items</text>
}
else
{
    <text>Items:</text> <br />
    <table id='itemtable'>
    <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Weapon Type</th>
        <th>Description</th>
    </tr>
    @foreach (var i in Model)
    {
        <tr>
        <td>
            @i.Name
        </td>
        <td>
            @i.Type
        </td>
        <td>
            @i.WeaponType
        </td>
        <td>
            @i.Description
        </td>
        </tr>
    }
    </table>
}
</div>