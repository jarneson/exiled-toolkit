@model ExiledToolkit.Models.StashViewModel
@using MvcContrib.UI.Grid
@{
    ViewBag.Title = "Index";
}

@if (Model == null)
{
    <h3>No Items</h3>
}
else
{
    <div id='tabContainer' style="width:100%; height:1024px;">
        <ul>
            @foreach(var tab in Model.Tabs)
            {
                <li><a href='#@tab.Key.Replace(' ', '_')'>@tab.Key</a></li>
            }
        </ul>
        @foreach (var tab in Model.Tabs)
        {
            <div id='@tab.Key.Replace(' ', '_')' >
            <iframe src="/Stash/List?BaseType=@tab.Key" style="border: 0px; width:100%; height:100%">
            </iframe>
            </div>
        }
    </div>
    <script type="text/jscript">
        $("#tabContainer").tabs();
    </script>
}