@model ExiledToolkit.Models.StashViewModel
@using MvcContrib.UI.Grid
@{
    ViewBag.Title = "Index";
}

@if (Model == null)
{
    <h3>No Items</h3>
}
else
{
    <div id='tabContainer' style="width:100%; height:1024px;">
        <ul>
            @foreach(var tab in Model.Tabs)
            {
                <li><a href="/Stash/List?BaseType=@tab.Key">@tab.Key</a></li>
            }
        </ul>
    </div>
    <script type="text/jscript">
        $("#tabContainer").tabs({
            beforeLoad:function(event, ui) {
                ui.jqXHR.error(function() {
                    ui.panel.html("Couldn't load this tab.");
                });
            }
        });
    </script>
}